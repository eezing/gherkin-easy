env:
  commonjs: true
  es6: true
  node: true
  jest: true
  mocha: true
extends:
- eslint:recommended
parserOptions:
  ecmaFeatures:
    experimentalObjectRestSpread: true
  sourceType: module
rules:
  react/display-name: 0
  eqeqeq: warn
  indent:
  - warn
  linebreak-style:
  - error
  - unix
  quotes:
  - error
  - single
  semi:
  - error
  - always
  comma-spacing:
  - error
  - before: false
    after: true
  no-console: 0
